            "Onboarding automation"
          ]
        },
        "data_integration_processing": {
          "name": "Data Integration & Processing",
          "description": "Payment provider integrations and data processing",
          "total_issues": 8,
          "business_value": "Critical",
          "dependencies": ["authentication_user_management"],
          "key_features": [
            "Stripe integration",
            "PayPal integration", 
            "Real-time data sync",
            "Historical data import"
          ]
        },
        "analytics_engine_calculations": {
          "name": "Analytics Engine & Calculations",
          "description": "Core subscription metrics and calculations",
          "total_issues": 7,
          "business_value": "Critical",
          "dependencies": ["data_integration_processing"],
          "key_features": [
            "MRR calculations",
            "Churn analysis",
            "Revenue forecasting",
            "Customer lifecycle analytics"
          ]
        },
        "dashboard_visualization": {
          "name": "Dashboard & Visualization",
          "description": "User interface and data visualization",
          "total_issues": 8,
          "business_value": "High",
          "dependencies": ["analytics_engine_calculations"],
          "key_features": [
            "Mobile-first dashboard",
            "Interactive charts",
            "Custom visualizations",
            "Responsive design"
          ]
        },
        "deployment_operations": {
          "name": "Deployment & Operations",
          "description": "Infrastructure and operational concerns",
          "total_issues": 6,
          "business_value": "High",
          "dependencies": ["dashboard_visualization"],
          "key_features": [
            "Production deployment",
            "Monitoring setup",
            "Performance optimization",
            "Security hardening"
          ]
        }
      }
    },
    "team_workload": {
      "name": "üë• Team Workload",
      "description": "Team capacity and assignment distribution",
      "target_audience": ["resource_managers", "team_leads", "hr"],
      "layout": "table",
      "group_by": "team",
      "sort_by": "workload",
      "filters": {
        "team": ["all"],
        "status": ["active"]
      },
      "columns": [
        "team_member",
        "assigned_issues",
        "story_points_assigned",
        "current_workload_percentage",
        "availability_status",
        "next_available_date"
      ],
      "widgets": [
        {
          "type": "capacity_overview",
          "title": "Team Capacity Overview",
          "data_source": "team_capacity",
          "visualization": "donut_chart",
          "show_utilization_percentage": true
        },
        {
          "type": "workload_distribution",
          "title": "Workload Distribution",
          "data_source": "individual_workloads",
          "visualization": "horizontal_bar_chart",
          "sort_by": "workload_descending"
        },
        {
          "type": "skill_matrix",
          "title": "Team Skills Matrix",
          "data_source": "team_skills",
          "visualization": "matrix",
          "highlight_gaps": true
        }
      ],
      "team_profiles": {
        "ux_team": {
          "name": "UX Team",
          "members": 2,
          "capacity_per_sprint": 40,
          "specializations": ["user_research", "prototyping", "design_systems"],
          "current_utilization": "85%",
          "availability": "Monday-Friday"
        },
        "ui_team": {
          "name": "UI Team", 
          "members": 2,
          "capacity_per_sprint": 35,
          "specializations": ["react", "mobile_responsive", "component_libraries"],
          "current_utilization": "90%",
          "availability": "Monday-Friday"
        },
        "dev_team": {
          "name": "Dev Team",
          "members": 3,
          "capacity_per_sprint": 50,
          "specializations": ["backend_api", "database", "integrations"],
          "current_utilization": "75%",
          "availability": "Monday-Friday"
        },
        "qa_team": {
          "name": "QA Team",
          "members": 2,
          "capacity_per_sprint": 30,
          "specializations": ["automated_testing", "manual_testing", "performance"],
          "current_utilization": "80%",
          "availability": "Monday-Friday"
        },
        "devops_team": {
          "name": "DevOps Team",
          "members": 1,
          "capacity_per_sprint": 25,
          "specializations": ["deployment", "monitoring", "infrastructure"],
          "current_utilization": "70%",
          "availability": "On-call + scheduled"
        }
      }
    },
    "qa_pipeline": {
      "name": "üîç QA Pipeline",
      "description": "Quality assurance workflow tracking",
      "target_audience": ["qa_team", "test_managers", "quality_engineers"],
      "layout": "board",
      "group_by": "testing_stage",
      "sort_by": "priority",
      "filters": {
        "team": ["QA Team"],
        "status": ["code_review", "testing", "deployment"]
      },
      "widgets": [
        {
          "type": "testing_pipeline",
          "title": "Testing Pipeline Status",
          "data_source": "test_execution_status",
          "visualization": "pipeline_view",
          "stages": ["unit_tests", "integration_tests", "e2e_tests", "performance_tests"]
        },
        {
          "type": "defect_tracking",
          "title": "Defect Trend Analysis",
          "data_source": "defects_over_time",
          "visualization": "line_chart",
          "show_severity_breakdown": true
        },
        {
          "type": "test_coverage",
          "title": "Test Coverage Report",
          "data_source": "code_coverage",
          "visualization": "coverage_map",
          "highlight_low_coverage": true
        }
      ],
      "quality_metrics": [
        {
          "name": "Test Coverage",
          "value": "lines_covered / total_lines * 100",
          "format": "percentage",
          "target": 80,
          "current": 75
        },
        {
          "name": "Defect Density",
          "value": "defects_found / kloc",
          "format": "number",
          "target": 2,
          "current": 1.5
        },
        {
          "name": "Test Execution Rate",
          "value": "tests_executed / tests_planned * 100",
          "format": "percentage",
          "target": 95,
          "current": 92
        }
      ]
    },
    "release_readiness": {
      "name": "üöÄ Release Readiness",
      "description": "Production deployment tracking",
      "target_audience": ["release_managers", "devops", "stakeholders"],
      "layout": "table",
      "group_by": "release_milestone",
      "sort_by": "priority",
      "filters": {
        "priority": ["P0", "P1"],
        "status": ["testing", "deployment", "done"]
      },
      "columns": [
        "title",
        "epic",
        "sprint",
        "status",
        "business_value",
        "risk_level",
        "deployment_readiness"
      ],
      "widgets": [
        {
          "type": "release_health",
          "title": "Release Health Score",
          "data_source": "release_metrics",
          "visualization": "gauge_chart",
          "thresholds": {
            "healthy": 85,
            "warning": 70,
            "critical": 50
          }
        },
        {
          "type": "deployment_checklist",
          "title": "Deployment Readiness Checklist",
          "data_source": "deployment_criteria",
          "visualization": "checklist",
          "show_completion_percentage": true
        },
        {
          "type": "risk_assessment",
          "title": "Release Risk Assessment",
          "data_source": "identified_risks",
          "visualization": "risk_matrix",
          "axes": ["probability", "impact"]
        }
      ],
      "release_criteria": {
        "functional_completeness": {
          "name": "Functional Completeness",
          "description": "All P0 and P1 features implemented",
