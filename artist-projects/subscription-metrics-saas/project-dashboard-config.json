          "current_score": 85
        },
        "quality_gates": {
          "name": "Quality Gates",
          "description": "Test coverage and defect thresholds met",
          "weight": 25,
          "current_score": 90
        },
        "performance_benchmarks": {
          "name": "Performance Benchmarks",
          "description": "Response time and throughput requirements met",
          "weight": 20,
          "current_score": 75
        },
        "security_compliance": {
          "name": "Security Compliance",
          "description": "Security scan and compliance checks passed",
          "weight": 15,
          "current_score": 95
        },
        "documentation_completeness": {
          "name": "Documentation Completeness",
          "description": "User and technical documentation completed",
          "weight": 10,
          "current_score": 70
        }
      }
    }
  },
  "automation_triggers": {
    "daily_updates": {
      "schedule": "0 9 * * 1-5",
      "actions": [
        "refresh_all_dashboards",
        "update_sprint_burndown",
        "calculate_team_velocity",
        "check_blocked_items"
      ]
    },
    "sprint_events": {
      "sprint_start": [
        "create_sprint_dashboard",
        "notify_teams",
        "setup_burndown_tracking"
      ],
      "sprint_end": [
        "generate_sprint_report",
        "calculate_velocity",
        "update_epic_progress"
      ]
    },
    "quality_gates": {
      "pr_merged": [
        "update_code_coverage",
        "run_automated_tests",
        "update_deployment_readiness"
      ],
      "deployment_complete": [
        "update_release_status",
        "notify_stakeholders",
        "generate_release_report"
      ]
    }
  },
  "reporting_schedule": {
    "daily_standup_report": {
      "frequency": "daily",
      "time": "08:30",
      "recipients": ["development_teams"],
      "content": [
        "yesterday_completed",
        "today_planned",
        "blocked_items",
        "sprint_progress"
      ]
    },
    "weekly_executive_summary": {
      "frequency": "weekly",
      "day": "friday",
      "time": "17:00",
      "recipients": ["executives", "stakeholders"],
      "content": [
        "project_progress_summary",
        "epic_completion_status",
        "sprint_velocity_trend",
        "upcoming_milestones",
        "risk_assessment"
      ]
    },
    "sprint_retrospective_report": {
      "frequency": "sprint_end",
      "recipients": ["all_teams", "project_managers"],
      "content": [
        "sprint_completion_metrics",
        "velocity_analysis",
        "quality_metrics",
        "team_feedback_summary",
        "improvement_recommendations"
      ]
    }
  },
  "integration_endpoints": {
    "github_api": {
      "base_url": "https://api.github.com",
      "authentication": "token",
      "rate_limit": 5000,
      "endpoints": {
        "issues": "/repos/{owner}/{repo}/issues",
        "projects": "/repos/{owner}/{repo}/projects",
        "pull_requests": "/repos/{owner}/{repo}/pulls"
      }
    },
    "slack_webhooks": {
      "development_channel": "${SLACK_DEV_WEBHOOK}",
      "qa_channel": "${SLACK_QA_WEBHOOK}",
      "leadership_channel": "${SLACK_LEADERSHIP_WEBHOOK}"
    },
    "analytics_api": {
      "base_url": "https://api.metricflow.internal",
      "authentication": "api_key",
      "endpoints": {
        "project_metrics": "/metrics/project/{project_id}",
        "team_performance": "/metrics/team/{team_id}",
        "sprint_data": "/metrics/sprint/{sprint_id}"
      }
    }
  },
  "customization_options": {
    "theme": {
      "primary_color": "#3b82f6",
      "secondary_color": "#10b981",
      "accent_color": "#f59e0b",
      "background_color": "#f8fafc",
      "text_color": "#1f2937"
    },
    "branding": {
      "logo_url": "/assets/metricflow-logo.png",
      "company_name": "MetricFlow Analytics",
      "project_subtitle": "Subscription Analytics SaaS"
    },
    "layout_preferences": {
      "default_view": "executive_dashboard",
      "sidebar_collapsed": false,
      "auto_refresh_interval": 300,
      "notification_sound": true
    }
  },
  "permissions": {
    "roles": {
      "admin": {
        "permissions": ["read", "write", "configure", "delete"],
        "views": ["all"]
      },
      "project_manager": {
        "permissions": ["read", "write"],
        "views": ["executive_dashboard", "sprint_progress", "team_workload"]
      },
      "team_lead": {
        "permissions": ["read", "write"],
        "views": ["development_view", "sprint_progress", "team_workload"]
      },
      "developer": {
        "permissions": ["read"],
        "views": ["development_view", "sprint_progress"]
      },
      "qa_engineer": {
        "permissions": ["read", "write"],
        "views": ["qa_pipeline", "sprint_progress"]
      },
      "stakeholder": {
        "permissions": ["read"],
        "views": ["executive_dashboard", "epic_roadmap", "release_readiness"]
      }
    }
  }
}