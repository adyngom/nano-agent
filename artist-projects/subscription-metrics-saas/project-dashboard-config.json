{
  "dashboard_name": "MetricFlow Project Management Dashboard",
  "project_info": {
    "name": "MetricFlow - Subscription Analytics SaaS",
    "methodology": "ARTIST",
    "phase": "R - Repository Setup",
    "timeline": "4 months (7 sprints)",
    "total_issues": 35,
    "epics": 5,
    "teams": 6
  },
  "views": {
    "executive_dashboard": {
      "name": "üìä Executive Dashboard",
      "description": "High-level progress and milestone tracking for leadership",
      "target_audience": ["executives", "stakeholders", "project_managers"],
      "layout": "board",
      "group_by": "epic",
      "sort_by": "priority",
      "filters": {
        "priority": ["P0", "P1"],
        "status": ["in_progress", "testing", "deployment", "done"]
      },
      "widgets": [
        {
          "type": "progress_chart",
          "title": "Overall Project Progress",
          "data_source": "issues_completed_percentage",
          "visualization": "donut_chart",
          "thresholds": {
            "on_track": 85,
            "at_risk": 70,
            "critical": 50
          }
        },
        {
          "type": "epic_status",
          "title": "Epic Completion Status",
          "data_source": "epic_progress",
          "visualization": "horizontal_bar_chart",
          "show_percentage": true
        },
        {
          "type": "sprint_burndown",
          "title": "Current Sprint Burndown",
          "data_source": "current_sprint_progress",
          "visualization": "line_chart",
          "show_ideal_line": true
        },
        {
          "type": "milestone_tracker",
          "title": "Upcoming Milestones",
          "data_source": "milestones",
          "visualization": "timeline",
          "show_days_remaining": true
        }
      ],
      "kpis": [
        {
          "name": "Project Completion",
          "value": "issues_completed_count / total_issues * 100",
          "format": "percentage",
          "target": 100
        },
        {
          "name": "Sprint Velocity",
          "value": "avg_story_points_per_sprint",
          "format": "number",
          "target": 40
        },
        {
          "name": "Quality Score",
          "value": "(1 - defect_rate) * 100",
          "format": "percentage",
          "target": 95
        },
        {
          "name": "Timeline Health",
          "value": "sprint_completion_rate",
          "format": "percentage",
          "target": 85
        }
      ]
    },
    "development_view": {
      "name": "üíª Development View",
      "description": "Active sprint work and technical dependencies",
      "target_audience": ["developers", "tech_leads", "architects"],
      "layout": "board",
      "group_by": "team",
      "sort_by": "priority",
      "filters": {
        "team": ["Dev Team", "UI Team"],
        "status": ["sprint_planning", "in_progress", "code_review", "testing"]
      },
      "widgets": [
        {
          "type": "active_work",
          "title": "Current Sprint Work",
          "data_source": "current_sprint_issues",
          "visualization": "kanban_board",
          "columns": ["sprint_planning", "in_progress", "code_review", "testing"]
        },
        {
          "type": "team_capacity",
          "title": "Team Capacity Utilization",
          "data_source": "team_workload",
          "visualization": "stacked_bar_chart",
          "show_availability": true
        },
        {
          "type": "code_review_queue",
          "title": "Code Review Queue",
          "data_source": "pending_reviews",
          "visualization": "list",
          "sort_by": "age_ascending"
        },
        {
          "type": "blocked_issues",
          "title": "Blocked Items",
          "data_source": "blocked_issues",
          "visualization": "alert_list",
          "highlight_critical": true
        }
      ],
      "metrics": [
        {
          "name": "Pull Requests Open",
          "value": "count(pr_status = 'open')",
          "format": "number"
        },
        {
          "name": "Average Review Time",
          "value": "avg(pr_review_time_hours)",
          "format": "hours"
        },
        {
          "name": "Code Coverage",
          "value": "test_coverage_percentage",
          "format": "percentage"
        },
        {
          "name": "Build Success Rate",
          "value": "ci_success_rate",
          "format": "percentage"
        }
      ]
    },
    "sprint_progress": {
      "name": "üèÉ Sprint Progress",
      "description": "Current sprint execution tracking",
      "target_audience": ["scrum_masters", "team_leads", "developers"],
      "layout": "table",
      "group_by": "sprint",
      "sort_by": "priority",
      "filters": {
        "sprint": ["current_sprint"],
        "status": ["all"]
      },
      "columns": [
        "title",
        "assignee", 
        "complexity",
        "story_points",
        "status",
        "days_in_current_status",
        "epic",
        "priority"
      ],
      "widgets": [
        {
          "type": "sprint_burndown_chart",
          "title": "Sprint Burndown",
          "data_source": "daily_story_points_remaining",
          "visualization": "line_chart",
          "show_ideal_burndown": true
        },
        {
          "type": "velocity_chart",
          "title": "Team Velocity Trend",
          "data_source": "sprint_velocity_history",
          "visualization": "bar_chart",
          "show_average_line": true
        },
        {
          "type": "scope_change_tracker",
          "title": "Sprint Scope Changes",
          "data_source": "sprint_scope_changes",
          "visualization": "waterfall_chart"
        }
      ],
      "alerts": [
        {
          "condition": "sprint_completion_rate < 0.8",
          "message": "Sprint at risk - completion rate below 80%",
          "severity": "warning"
        },
        {
          "condition": "blocked_issues_count > 2",
          "message": "Multiple blocked issues - intervention needed",
          "severity": "critical"
        }
      ]
    },
    "epic_roadmap": {
      "name": "üó∫Ô∏è Epic Roadmap",
      "description": "Progress by major feature area",
      "target_audience": ["product_managers", "stakeholders", "architects"],
      "layout": "board",
      "group_by": "epic",
      "sort_by": "sprint",
      "filters": {
        "epic": ["all"],
        "status": ["analysis", "sprint_planning", "in_progress", "done"]
      },
      "widgets": [
        {
          "type": "epic_timeline",
          "title": "Epic Delivery Timeline",
          "data_source": "epic_schedules",
          "visualization": "gantt_chart",
          "show_dependencies": true
        },
        {
          "type": "feature_completion",
          "title": "Feature Completion Matrix",
          "data_source": "epic_features",
          "visualization": "heatmap",
          "color_by": "completion_status"
        },
        {
          "type": "business_value_delivery",
          "title": "Business Value Delivered",
          "data_source": "completed_business_value",
          "visualization": "cumulative_area_chart"
        }
      ],
      "epic_details": {
        "authentication_user_management": {
          "name": "Authentication & User Management",
          "description": "User authentication and management features",
          "total_issues": 6,
          "business_value": "Critical",
          "dependencies": [],
          "key_features": [
            "SaaS Starter integration",
